<!DOCTYPE html>
<html>
  <head>
    <title>InstaApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>



    <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="/">InstApp</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <!-- <li class="nav-item active">
        <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
      </li> -->
      <li class="nav-item">
        <a class="nav-link" href="/posts">Post</a>
      </li>
    </ul>
    <ul class="navbar-nav navbar-right">
          <% if user_signed_in? %>
          <li class=" nav-link"><%= link_to "new post", new_post_path%></li>
          <li class=" nav-link"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>

          <% else %>
          <li class=" nav-link"><%= link_to 'Get Started',  new_user_registration_path, class: "btn btn-sm btn-outline-primary" %></li>
          <li class=" nav-link"> <%= link_to "Login", new_user_session_path, class: "btn btn-sm btn-outline-primary" %></li>
          <% end %>
        </ul>
  </div>
</nav>

<% if notice %><div class="alert alert-info"><%= notice %></div><% end %>
<% if alert %><div class="alert alert-warning"><%= alert %></div><% end %>


    <%= yield %>
  </body>
</html>
