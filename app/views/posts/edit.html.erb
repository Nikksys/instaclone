
<% if current_user.id == @post.user_id %>
<div class=" pt-5 container">

  <div class="row justify-content-center">
    <h3>Edit your post</h3>
      <%= render 'form' %>
  </div>
</div>
<% else %>

  <div style="border: solid 1px; margin-top: 20%; background-color: black; ">
    <h1 style="color: red; text-align: center">ACCESS DENIED </h1>
    <h4 style="color: white; text-align: center">You can't update this post</h4>
    <h4 style="color: white; text-align: center">It's belongs to the user with the id: <%= (@post.user_id) %></h4>

  </div>
<% end %>
